{
  "name": "vscode-sql-lint",
  "displayName": "SQL Lint",
  "description": "SQL Linter for Visual Studio Code",
  "publisher": "lewissteele",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "sql-lint configuration",
      "properties": {
        "sql-lint.driver": {
          "type": "string",
          "default": "mysql",
          "description": "Database driver mysql|postgres"
        },
        "sql-lint.host": {
          "type": "string",
          "default": null,
          "description": "Database hostname"
        },
        "sql-lint.user": {
          "type": "string",
          "default": null,
          "description": "Database username"
        },
        "sql-lint.password": {
          "type": "string",
          "default": null,
          "description": "Database password"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "sql-lint": "^0.0.19",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:lewissteele/vscode-sql-lint.git"
  }
}
